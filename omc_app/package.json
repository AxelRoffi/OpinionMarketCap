{
  "name": "opinionmarketcap",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:landing": "turbo run dev --filter=landing",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=web",
    "build:landing": "turbo run build --filter=landing",
    "deploy:web": "cd apps/web && vercel --prod",
    "deploy:landing": "cd apps/landing && vercel --prod",
    "test:contracts": "cd contracts && npx hardhat test",
    "compile": "cd contracts && npx hardhat compile"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/node": "^25.0.6",
    "hardhat-contract-sizer": "^2.10.1",
    "ts-node": "^10.9.2",
    "turbo": "latest",
    "typescript": "^5.9.3"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0"
  }
}
